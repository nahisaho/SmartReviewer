# SmartReviewer Environment Configuration
# Copy this file to .env and customize

# ============================================
# Infrastructure
# ============================================

# Qdrant (Vector DB)
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_GRPC_PORT=6334

# Neo4j (Graph DB)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=smartreviewer_dev

# MinIO (Object Storage)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_SECURE=false

# ============================================
# MCP Servers
# ============================================

# Core Server
CORE_SERVER_HOST=localhost
CORE_SERVER_PORT=8001

# RAG Server
RAG_SERVER_HOST=localhost
RAG_SERVER_PORT=8002

# Knowledge Server
KNOWLEDGE_SERVER_HOST=localhost
KNOWLEDGE_SERVER_PORT=8003

# ============================================
# LLM Integration (源内環境)
# ============================================

# MCP Sampling (Host-side LLM)
# LLM_ENDPOINT=http://gennai-api.example.jp/v1
# LLM_API_KEY=your-api-key
# LLM_MODEL=gennai-base

# ============================================
# Embedding
# ============================================

# Embedding Model
EMBEDDING_MODEL=intfloat/multilingual-e5-large
EMBEDDING_DIMENSION=1024

# ============================================
# Application
# ============================================

# Log Level
LOG_LEVEL=INFO

# Debug Mode
DEBUG=false
